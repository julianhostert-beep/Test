<?xml version="1.0" encoding="UTF-8"?>
<svg width="960" height="360" viewBox="0 0 960 360"
     xmlns="http://www.w3.org/2000/svg">

  <!-- Hintergrund -->
  <defs>
    <linearGradient id="bg" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%"  stop-color="#020617"/>
      <stop offset="40%" stop-color="#020617"/>
      <stop offset="100%" stop-color="#000000"/>
    </linearGradient>

    <linearGradient id="sky" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%"  stop-color="#1d4ed8"/>
      <stop offset="100%" stop-color="#0f172a"/>
    </linearGradient>

    <linearGradient id="platform" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%"  stop-color="#22d3ee"/>
      <stop offset="100%" stop-color="#0ea5e9"/>
    </linearGradient>

    <linearGradient id="platform2" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%"  stop-color="#4ade80"/>
      <stop offset="100%" stop-color="#22c55e"/>
    </linearGradient>

    <linearGradient id="platform3" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%"  stop-color="#fb7185"/>
      <stop offset="100%" stop-color="#f97316"/>
    </linearGradient>
  </defs>

  <!-- Rahmen-Hintergrund -->
  <rect x="0" y="0" width="960" height="360" fill="#020617"/>

  <!-- „Himmel“ -->
  <rect x="40" y="40" width="880" height="280" rx="24" fill="url(#bg)"/>
  <rect x="60" y="60" width="840" height="220" rx="20" fill="url(#sky)"/>

  <!-- Hauptplattform (Boden) -->
  <polygon fill="url(#platform)"
           points="
             120,260
             840,260
             880,320
             80,320
           "/>

  <!-- weiter entfernte Plattformen -->
  <rect x="520" y="210" width="140" height="40" fill="url(#platform2)"/>
  <rect x="640" y="190" width="90"  height="60" fill="url(#platform3)"/>
  <rect x="430" y="230" width="90"  height="30" fill="#0ea5e9"/>

  <!-- kleine seitliche Plattformen links -->
  <rect x="180" y="235" width="80" height="25" fill="#22c55e"/>
  <rect x="260" y="225" width="70" height="35" fill="#22c55e"/>

  <!-- Spielfigur (von hinten) -->
  <!-- Beine -->
  <rect x="390" y="225" width="18" height="55" fill="#1d4ed8"/>
  <rect x="432" y="225" width="18" height="55" fill="#1d4ed8"/>

  <!-- Körper -->
  <rect x="380" y="180" width="80" height="50" fill="#22c55e"/>

  <!-- Kopf -->
  <rect x="395" y="148" width="50" height="32" fill="#facc15"/>

  <!-- Mütze -->
  <rect x="395" y="140" width="50" height="12" fill="#0ea5e9"/>
  <rect x="392" y="138" width="56" height="6"  fill="#38bdf8"/>

  <!-- Schlagschatten unter Figur -->
  <ellipse cx="420" cy="282" rx="40" ry="10" fill="rgba(15,23,42,0.9)"/>

  <!-- leichte „Glow“-Kontur um Spielfeld -->
  <rect x="60" y="60" width="840" height="220" rx="20"
        fill="none" stroke="rgba(148,163,184,0.4)" stroke-width="2"/>
</svg>
